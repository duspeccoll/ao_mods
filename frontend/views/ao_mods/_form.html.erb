<div class="row">
  <div class="col-md-12">
    <%= render_aspace_partial :partial => "shared/flash_messages" %>
  </div>

  <div class="col-md-12" style="padding: 30px;">
    <h1><%= I18n.t("plugins.ao_mods.title") %></h1>
    <p><%= I18n.t("plugins.ao_mods.description") %></p>
    <%= form_tag({:action => :batch}, {:class => "form-horizontal", :id => "mods_download_form"}) do |form| %>
      <div class="form-group required">
        <label class="control-label col-sm-2" for="mods_resource">Resource</label>
        <div class="controls col-sm-8">
          <%= render_aspace_partial :partial => "mods_resource_linker" %>
        </div>
      </div>

      <div class="form-group">
        <div class="controls">
          <%= submit_tag I18n.t("plugins.ao_mods.actions.download"), :class => "btn btn-primary pull-right" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
